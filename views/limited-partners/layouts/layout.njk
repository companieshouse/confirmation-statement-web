    {% include "limited-partners/partials/header.njk" %}

    {% set errors = pageProperties.errors %}

<div class="govuk-width-container">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l">ACME LIMITED PARTNERSHIP (SL012345)</span>
            {{i18n.BYFPageTitle}}
        </h1>

        <p class="govuk-body"> {{i18n.BYFInfoHoldParagraph}}</p>

        <p class="govuk-body">{{i18n.BYFFileUpdatesParagraphStart}}<a
                href="https://www.gov.uk/">{{i18n.BYFFileUpdatesParagraphLink}}</a>{{i18n.BYFFileUpdatesParagraphEnd}}
        </p>
        <p class="govuk-body">{{i18n.BYFOnlyInfoChangedParagraph}}</p>

        {{ govukInsetText({
        html: "<p class='govuk-body'>" + i18n.BYFInsetParagraph1 + "</p>
        <p class='govuk-body'>"
            + i18n.BYFInsetParagraph2 + "</p>"
        }) }}


        {{ govukCheckboxes({
        name: "whatWillHappenConfirm",
        errorMessage: errors.BYFErrorMessageNotChecked if errors,
        fieldset: {
        legend: {
        text: i18n.whatWillHappenConfirmHeading,
        classes: "govuk-fieldset__legend--s"
        }
        },
        items: [
        {
        value: "confirm",
        text: i18n.BYFCheckboxText
        }
        ]
        }) }}

        {{ govukButton({
        text: i18n.BYFContinueBotton
        }) }}

    </div>
</div>

    {% include "limited-partners/partials/footer.njk" %}